<% content_for(:title, "Link | To Do") %>
URL : <h1><%= @link.url %></h1>
Votes: <%= @link.votes %>
<%= form_for( @link, :url => {:action => "vote_up", :link_id => @link.id} ) do |f| %>
  <%= f.submit("Vote Up")%>
<% end %>

<h3>Comments</h3>

<%= form_for [@link, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @link.comments) %>
</ul>

<p><%= link_to "Edit Link", edit_link_path %></p>
<p><%= link_to "Delete Link", link_path(@link),
  :data => {:confirm => "Are you sure?",:method => "delete"} %></p>

<p><%= link_to "Return to links", links_path %></p>
